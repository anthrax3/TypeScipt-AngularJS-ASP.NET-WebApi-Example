@{
    Layout = null;
}

<html lang="en" ng-app="StarterApp">
<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=RobotoDraft:300,400,500,700,400italic">
    <meta name="viewport" content="initial-scale=1" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <meta charset="utf-8" />
</head>
<body layout="column" ng-controller="AppCtrl">
    <md-toolbar layout="row">
        <div class="md-toolbar-tools">
            <md-button ng-click="toggleSidenav('left')" hide-gt-lg class="md-icon-button">
                <md-icon aria-label="Menu" md-svg-icon="/images/icons/menu.svg"></md-icon>
            </md-button>
            <h1 class="appTitle">Админка</h1>
        </div>
    </md-toolbar>
    <div layout="row" flex>
        <md-sidenav layout="column" class="md-sidenav-left md-whiteframe-z2" md-component-id="left" md-is-locked-open="$mdMedia('gt-lg')">

            <md-button ng-click="toggleSidenav('left')" ng-href="#/Orders/0" class="md-raised">Новый заказ</md-button>
            <md-button ng-click="toggleSidenav('left')" ng-href="#/Orders" class="md-raised">Все заказы</md-button>

        </md-sidenav>
        <div layout="column" flex id="content">
            <md-content layout="column" flex class="md-padding">
                <div ng-view autoscroll="false"></div>
            </md-content>
        </div>
    </div>

    @Scripts.Render("~/bundles/angular-material")
    @Scripts.Render("~/bundles/admin")

</body>
</html>